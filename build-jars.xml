<?xml version="1.0" encoding="UTF-8"?>
<!-- this does NOT compile the project, instead packages the classes and soources to two jar files-->
<project name="purejavacomm" default="buildjar" basedir=".">
	<target name="init">
	</target>
	<!-- create .jar -->
	<target name="buildjar" depends="init">
	    <delete file="./bin/purejavacomm.jar" failonerror="false" quiet="true" />
		<jar jarfile="./bin/purejavacomm.jar" basedir="./target/classes/" />
	    
		<delete file="./bin/purejavacomm-src.jar" failonerror="false" quiet="true" />
		<jar jarfile="./bin/purejavacomm-sources.jar" basedir="./src/main/java/" />
	</target>

</project>

<!-- end file build.xml -->
